{
    "description": "Simple browser extension that adds a page action to download `.vsix` files from the Visual Studio Marketplace, including older versions.",
    "manifest_version": 2,
    "name": "Download .vsix",
    "version": "1.4.0",
    "homepage_url": "https://github.com/verydanny/download-vsix",
    "icons": {
        "48": "icons/dl-vsix-48.png"
    },

    "page_action": {
        "default_icon": "icons/dl-vsix-32.png",
        "default_title": "Download .vsix",
        "show_matches": ["https://marketplace.visualstudio.com/items?*"],
        "default_popup": "popup/versions.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "download-vsix@danii.local",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    },

    "permissions": ["activeTab", "storage"]
}
